<table table style="width:100%" class = "table table-striped table-bordered">
  <thead>
    <tr>
      <th>Image<b></th>
      <th>Name<b></th>
      <th>Type<b></th>
      <th>Abilities<b></th>
    </tr>
  </thead>
  <tbody>
    <% @pokemons.each do |name| %>
      <tr>
        <td>
          <%= link_to ("<img src='#{name[:image]}' >").html_safe , pokemons_show_url(name[:name]) %>
        </td>
        <td>
          <%= name[:name] %>
        </td>
        <td>
          <%= name[:type] %>
        </td>
        <td>
          <%= name[:abilities].join ', '  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>