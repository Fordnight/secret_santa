<div>
  <strong>Title:</strong>
  <%= @list.title %>
</div>
<br/>
<div>
  <strong>gift type:</strong>
  <%= @list.gift_type.name %>
</div>
<h2>Players</h2>
<table style="width:100%" class = "table table-striped table-bordered">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @list.players.each do |player| %>
      <tr>
        <td>
          <%= player.id  %>
        </td>
        <td>
          <%= player.name  %>
        </td>
        <td>
          <%= player.email  %>
        </td>

      </tr>
    <%end%>

  </tbody>
</table>

<%= link_to 'Edit', edit_list_path(@list) %> |
<%= link_to 'Back', lists_path %>




